@model  ProjetoBRQ.Models.News
@{
    ViewBag.Title = "Details";
}
<br />
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Informações</h2>
        </div>
        <a class="btn btn-default" href="@Url.Action("Index","News")">
            <i class="fa fa-list" aria-hidden="true"></i>
            Listar Noticias
        </a>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <table class="table table-bordered table-condensed table-condensed table-hover ">
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Title)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Title)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Description)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Description)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Body)</b>
                            </td>
                            <td>
                                @Html.Raw(Model.Body)
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-5">
                    @if (Model.ImgNews.Count() > 0)
                    {
                        <img class="img-fluid" src="@Model.ImgNews.FirstOrDefault().Base64Image()">
                    }
                    else
                    {
                        <img src="">
                    }
                </div>
            </div>
        </div>

        @*Link para ações*@
        <a href="@Url.Action("Edit","News", new { Id = Model.Id })">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Editar
        </a>
        <a href="@Url.Action("Preview","News", new { Id = Model.Id })">
            <i class="fa fa-newspaper-o" aria-hidden="true"></i>
            Visualizar
        </a>
    </div>
</div>
<br />