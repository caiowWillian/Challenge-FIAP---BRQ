@model ProjetoBRQ.Models.News

@{
    ViewBag.Title = "Preview";
}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="text-center">@Model.Title</h3>
        </div>
        <div class="panel-body">
            <h3>@Model.Description</h3>
            <div class="row">
                <div class="col-md5" style="float:left">
                    @if (Model.ImgNews.Count() > 0)
                    {
                        <img src="@Model.ImgNews.FirstOrDefault().Base64Image()">
                    }
                </div>
                <div class="col-md-5">
                    @Html.Raw(Model.Body)
                </div>
            </div>
        </div>
    </div>
</div>
