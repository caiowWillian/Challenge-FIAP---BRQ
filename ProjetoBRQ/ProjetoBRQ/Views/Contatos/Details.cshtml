@model ProjetoBRQ.Models.Contatos
@{
    ViewBag.Title = "Details";
}

<br />
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Informações de @Model.Nome</h2>
        </div>

        <a class="btn btn-default" href="@Url.Action("Index","Contatos")">
            <i class="fa fa-list" aria-hidden="true"></i>
            Listar Contatos
        </a>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <table class="tbale table-bordered table-condensed table-hover">
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Nome)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Nome)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Email)</b>
                            </td>
                            <td>@Html.DisplayFor(m => m.Email)</td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.Telefone)</b>
                            </td>
                            <td>@Html.DisplayFor(m => m.Telefone)</td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.LabelFor(m => m.DataCadastro)</b>
                            </td>
                            <td>@Html.DisplayFor(m => m.DataCadastro)</td>
                        </tr>
                        @if (Model.DataAlteracao != null)
                        {
                            <tr>
                                <td>
                                    <b>@Html.LabelFor(m => m.DataAlteracao)</b>
                                </td>
                                <td>@Html.DisplayFor(m => m.DataAlteracao)</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Edit","Contatos", new { Id = Model.Id })">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Editar
        </a>
    </div>
</div>
<br />