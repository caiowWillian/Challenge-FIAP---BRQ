@model ProjetoBRQ.Models.Investiment
@{
    ViewBag.Title = "Create";
}

<br />
<div class="container">
    <h2>Editar investimento</h2>
    <a class="btn btn-default" href="@Url.Action("Index","Investiment")">
        <i class="fa fa-list" aria-hidden="true"></i>
        Listar Investimento
    </a>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Stock)
            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Value)
            @Html.TextBoxFor(m => m.Value, new { @class = "form-control money" })
            @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>

        <input type="submit" class="btn btn-default" value="Concluir alteração" />
    }
</div>
<br />

<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>
    tinymce.init({ selector: 'textarea' });
    $(function () {
        $('#Description').froalaEditor({
            iframe: true
        })
    });
</script>

