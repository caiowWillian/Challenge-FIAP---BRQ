@model ProjetoBRQ.Models.Investiment
@{
    ViewBag.Title = "Details";
}
<br />
<div class="container">
    <h2>Informações</h2>
    <a class="btn btn-default" href="@Url.Action("Index","Investiment")">
        <i class="fa fa-list" aria-hidden="true"></i>
        Listar Investimento
    </a>
    <div class="panel panel-default">    
        <div class="panel-body">
            <div class="col-md-5">
                <table class="table table-hover table-bordered table-condensed">
                    <tr>
                        <th>@Html.LabelFor(m => m.Name)</th>
                        <td>@Html.DisplayFor(m => m.Name)</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Stock)</th>
                        <td>@Html.DisplayFor(m => m.Stock)</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.DisplayValue)</th>
                        <td>@Html.DisplayFor(m => m.DisplayValue)</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Total)</th>
                        <td>R$ @Html.DisplayFor(m => m.Total)</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.InputDate)</th>
                        <td>@Html.DisplayFor(m => m.InputDate)</td>
                    </tr>
                    @if (Model.UpdateDate != null)
                    {
                        <tr>
                            <th>@Html.LabelFor(m => m.UpdateDate)</th>
                            <td>@Html.DisplayFor(m => m.UpdateDate)</td>
                        </tr>
                    }
                    <tr>
                        <th>@Html.LabelFor(m => m.Description)</th>
                        <td>@Html.Raw(Model.Description)</td>
                    </tr>
                </table>
            </div>
        </div>

        <a href="@Url.Action("Edit","Investiment", new { Id = Model.Id })">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Editar
        </a>
    </div>
</div>
<br />
